<% if can? :manage, Form -%>
  <h1>Editing form</h1>
<% else -%>
  <h1>Upload Spatial Data</h1>

  <p>Upload spatial data for the ICCA in the form of a shapefile or kml file</p>
<% end -%>

<% semantic_form_for @form, :html => {:multipart => true} do |f| %>
    <%= f.error_messages %>
    <%= f.inputs :spatial_data if current_user == @form.user %>
    <%= f.inputs :site, :as => :select, :collection => Site.all if can? :manage, Form %>
    <%= f.buttons %>
<% end %>

<%= link_to 'Show', @form %> |
<%= link_to 'Back', forms_path %>
