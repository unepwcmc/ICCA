  <%= javascript_include_tag 'jquery.tools.min' %>
  <%= javascript_include_tag 'jquery.flash' %>
  <%= javascript_include_tag 'jquery.simplemodal' %>
  <%= javascript_include_tag 'tiny_mce/jquery.tinymce' %>
  <%= javascript_include_tag 'init' %>
