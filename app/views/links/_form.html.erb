<% semantic_form_for @link do |f| %>
    <%= f.error_messages %>
    <%= f.inputs :name, :link %>
    <% f.inputs do %>
        <% if @linkable %>
            <%= f.input :linkable, :label => "#{@link.linkable_type}", :as => :select, :collection => @linkable %>
        <% else %>
            <%= f.input :linkable_id, :as => :hidden %>
        <% end %>
        <%= f.input :linkable_type, :as => :hidden %>
    <% end %>
    <%= f.buttons %>
<% end %>
