<% semantic_form_for @photo, :html => {:multipart => true} do |f| %>
    <%= f.error_messages %>
    <%= f.inputs :title, :description, :citation, :image %>
    <%= f.input :preferred, :hint => "Preferred images are displayed in preference to others" %>
    <% f.inputs do %>
        <% if @photoable %>
            <%= f.input :photoable, :label => "#{@photo.photoable_type}", :as => :select, :collection => @photoable %>
        <% else %>
            <%= f.input :photoable_id, :as => :hidden %>
        <% end %>
        <%= f.input :photoable_type, :as => :hidden %>
    <% end %>
    <%= f.buttons %>
<% end %>
