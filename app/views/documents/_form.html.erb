<% semantic_form_for @document, :html => {:multipart => true} do |f| %>
    <%= f.error_messages %>
    <%= hidden_field :document, :form_id %>
    <% f.inputs do %>
      <%= f.input :name, :label => 'Document Name' %>
      <%= f.input :doc %>
    <% end %>
    <% if current_user.try(:role?, :admin) %>
      <%= f.inputs :site %>
    <% end %>
    <%= f.buttons %>
<% end %>
